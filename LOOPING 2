public class GreatestValueInLoops {
    public static void main(String[] args) {
        int greatestValue = 0;

        // Outer loop
        for (int i = 1; i <= 5; i++) {
            // Inner loop
            for (int j = 1; j <= 3; j++) {
                int currentValue = i * j;
                if (currentValue > greatestValue) {
                    greatestValue = currentValue;
                }
            }
        }

        System.out.println("The greatest value within the loops is: " + greatestValue);
    }
}
